<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="10dp"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:orientation="vertical"
    tools:context="com.julianyepes.carcularresistencia.MainActivity"
    android:background="@drawable/resistencia">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

        <TextView style="@style/editText"
            android:text="Tole +-"
            android:id="@+id/tTole"/>
        <Button style="@style/editText"
            android:text="5%"
            android:id="@+id/btBan5"
            android:background="@color/gold"
            android:layout_weight="1" />
        <TextView style="@style/editText"
            android:text="Ppm:"
            android:id="@+id/tPpm"/>
        <Button style="@style/editText"
            android:text="5"
            android:id="@+id/btBan6"
            android:background="@color/purple" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">


        <Button style="@style/button"
            android:background="@color/blue"
            android:id="@+id/bBan1"
            android:layout_height="111dp"/>

        <LinearLayout style="@style/button"
            android:layout_weight="0.3"/>

        <Button style="@style/button"
            android:id="@+id/bBan2"
            android:layout_height="85dp"
            android:background="@color/red"/>

        <Button style="@style/button"
            android:id="@+id/bBan3"
            android:layout_height="85dp"
            android:background="@color/black"/>

        <Button style="@style/button"
            android:id="@+id/bBan4"
            android:layout_height="85dp"
            android:background="@color/orange"
            android:layout_margin="10dp" />

        <LinearLayout style="@style/button"
            android:layout_weight="0.4"/>

        <Button style="@style/button"
            android:id="@+id/bBan5"
            android:background="@color/gold"
            android:padding="10dp"
            android:layout_height="85dp" />

        <LinearLayout style="@style/button"
            android:layout_weight="0.4"/>

        <Button style="@style/button"
            android:id="@+id/bBan6"
            android:background="@color/purple"
            android:layout_height="111dp"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <Button style="@style/editText"
            android:text="6"
            android:id="@+id/btBan1"
            android:background="@color/blue" />

        <Button style="@style/editText"
            android:text="2"
            android:id="@+id/btBan2"
            android:background="@color/red"/>

        <Button style="@style/editText"
            android:text="0"
            android:textColor="@color/white"
            android:id="@+id/btBan3"
            android:background="@color/black"/>

        <Button style="@style/editText"
            android:text="x3"
            android:id="@+id/btBan4"
            android:background="@color/orange"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">

        <TextView style="@style/editText"
             android:text="620k"
            android:id="@+id/eValor"/>

    </LinearLayout>

</LinearLayout>
